{
  "name": "tinyclaw-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "core",
    "apps/*",
    "plugins/*"
  ],
  "scripts": {
    "dev": "bun run --cwd apps/cli dev",
    "dev:ui": "bun run --cwd apps/web dev",
    "build": "bun run build:core && bun run build:apps",
    "build:core": "bun run --cwd core build",
    "build:apps": "bun run --cwd apps/web build && bun run --cwd apps/cli build",
    "build:ui": "bun run --cwd apps/web build",
    "start": "bun run --cwd apps/cli start",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.10.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@wgtechlabs/log-engine": "^2.3.0"
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264"
}
